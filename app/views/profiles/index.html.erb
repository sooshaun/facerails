<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Bio</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>        
        <td>
            <% if profile.image.present? %>
              <%= image_tag profile.image_url(:thumb) %>
            <% end %>
        </td>
        <td><%= profile.name %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.user.email %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>

<hr>

<nav>
  <% if user_signed_in? %>
    <%= link_to "Edit Account", edit_user_registration_path, class: "bth btn-primary"%>
    <%= link_to "Sign Out", destroy_user_session_path, class: "bth btn-light", method: :delete%><%# need a space between method: :delete %>
  <% else %>
    <%= link_to "Sign In", new_user_session_path, class: "bth btn-primary"%>
    <%= link_to "Sign Up", new_user_registration_path, class: "bth btn-primary"%>
  <%end>%>
</nav>  



